@comment{
        Propagates stymuli along synapses
}

@declare{'neuralFireRule'}


@code{ String ctx = format( "string", model ); }
rule "NeuralFire_@{ model }_Layer@{ layerIndex }"
salience -100
when
    $neur : Neuron( context == @{ ctx }, layerIndex == @{ layerIndex },
                    $index : id, $bias : bias, $fanIn : fanIn, $cur : value )
    accumulate( $c : Charge( context == @{ ctx }, index == $index, $in : value ),
                $list : collectList( $c ),
                $val : sum( $in );
                $list.size == $fanIn )
then
    Stym y = new Stym();
        y.setContext( @{ctx} );
        y.setIndex( $index );
        double x = $bias + $val.doubleValue();
        x = @{ mapNeuralActivation( actFun.value, thold ) };
        y.setValue( x );
        y.setNormalized( ! @{ needsNormal } );

    System.out.println( "Firing neur " + $neur );

    insertLogical( y );
end

@end{}


@includeNamed{'neuralFireRule'}
