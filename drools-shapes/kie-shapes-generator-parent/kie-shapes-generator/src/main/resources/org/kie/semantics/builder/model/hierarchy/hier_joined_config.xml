<?xml version="1.0" encoding="UTF-8"?>
<solver>

  <!--environmentMode>FULL_ASSERT</environmentMode-->

  <solutionClass>org.kie.semantics.builder.model.hierarchy.opt.OptimalHierarchy</solutionClass>
  <entityClass>org.kie.semantics.builder.model.ConceptImplProxy</entityClass>

  <scoreDirectorFactory>
    <scoreDrl>org/kie/semantics/builder/model/hierarchy/hier_joined_constraints.drl</scoreDrl>
  </scoreDirectorFactory>

  <termination>
    <secondsSpentLimit>5</secondsSpentLimit>>
  </termination>


  <customPhase>
    <customPhaseCommandClass>org.kie.semantics.builder.model.hierarchy.opt.SolutionInitializer</customPhaseCommandClass>
  </customPhase>

  <localSearch>
    <moveListFactory>
      <moveListFactoryClass>org.kie.semantics.builder.model.hierarchy.opt.AssignSuperMoveFactory</moveListFactoryClass>
    </moveListFactory>
    <acceptor>
      <simulatedAnnealingStartingTemperature>10hard/100soft</simulatedAnnealingStartingTemperature>
    </acceptor>
    <forager>
      <acceptedCountLimit>25</acceptedCountLimit>
    </forager>
    <termination>
      <unimprovedStepCountLimit>5</unimprovedStepCountLimit>
    </termination>
  </localSearch>


</solver>
