rule "Obj_Relations Domain Complex"
when
    $onto : OWLOntology()
    $prop : OWLObjectProperty( $iri : IRI )
    $domx : OWLClassExpression( classExpressionLiteral == false ) from EntitySearcher.getDomains( $prop, $onto ).collect( Collectors.toList() )
then
    OWLDataFactory factory = $onto.getOWLOntologyManager().getOWLDataFactory();
    NameUtils utils = NameUtils.getInstance();
        OWLClass domClass = factory.getOWLClass( IRI.create( utils.buildNameFromIri( "", $prop.toString() ) + "Domain" ) );

    insert( domClass );

    insert( new OWLClassBinding( $domx.toString(), domClass.toString() ) );

    insert( $domx );
end

