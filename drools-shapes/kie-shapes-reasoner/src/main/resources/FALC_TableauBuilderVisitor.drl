rule "Dual Negation"
when
    $outer : OWLObjectComplementOf( $arg : operand )
    $inner : OWLObjectComplementOf( $tgt : operand ) from $arg
then
    //System.out.println( "removing dual negation  " + $outer );
    retract( $outer );
    insert( $tgt );
end


