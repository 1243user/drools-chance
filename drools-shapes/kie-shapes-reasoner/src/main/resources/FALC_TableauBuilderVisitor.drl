rule "Definition"
salience 1000
when
    $context : OWLOntology( )
	$klass   : OWLClass( $type : IRI )
	$def     : OWLClassExpression(  ) from EntitySearcher.getEquivalentClasses( $klass, $context ).collect( Collectors.toList() )
	not        OWLClassBinding( $klass.toString(), $def.toString() ; );
then
    insert( new OWLClassBinding( $def.toString(), $klass.toString() ) );
end


rule "Rewrite subClassOf"
salience 1500
no-loop
when
    $context : OWLOntology( )
	$klass   : OWLClass( $type : IRI )
	exists     OWLClassExpression(  ) from EntitySearcher.getSuperClasses( $klass, $context ).collect( Collectors.toList() )
then

//    System.out.println(" WARNING FOUND SUBCLASS ON " + $klass + "; CAN ONLY HANDLE EQUIV "  );
//    OWLDataFactory factory = $context.getOWLOntologyManager().getOWLDataFactory();
//        OWLClass temp = factory.getOWLClass( IRI.create( java.util.UUID.randomUUID().toString() ) );
//        OWLClassExpression mockDef = factory.getOWLObjectIntersectionOf( $def, temp );

    OWLDataFactory factory = $context.getOWLOntologyManager().getOWLDataFactory();
        OWLClass temp = factory.getOWLClass( IRI.create(java.util.UUID.randomUUID().toString()) );
        OWLClassExpression[] sups = EntitySearcher.getSuperClasses( $klass, $context ).toArray( OWLClassExpression[]::new );

        OWLClassExpression[] ext = java.util.Arrays.copyOf( sups, sups.length + 1);
        ext[ sups.length ] = temp;

        System.out.println(" \t BINDING TO " + ext );
        OWLClassExpression mockDef = factory.getOWLObjectIntersectionOf( ext );

    insert( new OWLClassBinding( mockDef.toString(), $klass.toString() ) );
    insert( mockDef );
end





